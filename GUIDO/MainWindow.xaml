<Window x:Class="GUIDO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUIDO"
        mc:Ignorable="d"
        Title="GUIDO" Height="206" Width="410.538" Icon="images/guido.png" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="simlpleGuidInput" Height="29" Margin="10,35,94,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" VerticalContentAlignment="Center" Padding="5,0,0,0" FontFamily="Open Sans Light" TextChanged="simlpleGuidInput_TextChanged" Text="0873b0cd-d29a-4ffc-a861-851461d90282"/>
        <Label x:Name="simpleErrorLabel" Content="" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" Width="446" Background="#00000000" Foreground="#FFF30C0C" FontWeight="Bold" FontFamily="Open Sans Light" Visibility="Collapsed"/>
        <Button x:Name="convertBtn" Content="Convert" HorizontalAlignment="Left" Margin="316,35,0,0" VerticalAlignment="Top" Width="75" Height="29" Click="convertBtn_Click" FontFamily="Open Sans Light"/>
        <StackPanel Margin="10,95,94,21" Orientation="Vertical" Background="WhiteSmoke">
            <TextBox x:Name="simpleFormGuidBox" HorizontalAlignment="Left" Height="28" TextWrapping="Wrap" VerticalAlignment="Top" Width="301" BorderBrush="{x:Null}" Background="{x:Null}" VerticalContentAlignment="Center" FontFamily="Consolas" FontSize="14" Foreground="#FFDA1414"/>
            <TextBox x:Name="properFormGuidBox" HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" VerticalAlignment="Top" Width="301" BorderBrush="{x:Null}" Background="{x:Null}" VerticalContentAlignment="Center" FontFamily="Consolas" FontSize="14" Foreground="#FFDA1414"/>
        </StackPanel>
    </Grid>
</Window>
